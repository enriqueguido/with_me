<link href="https://fonts.googleapis.com/css?family=BioRhyme" rel="stylesheet">

<div id="nav-div">
  <span id="nav-text">
    Go With Me
  </span>
</div>

<div id="search" class="input-group">
<span class="input-group-btn">
<%= form_tag(root_path, :method => "get", id: "search-form", ) do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Events", :class => "form-control"%>
    <%= submit_tag "Search", :name => nil, :class => "btn-default", :id => "search-btn" %>
<% end %>
</span>
</div>

<div id="spacer">

</div>

<div id="event-info">

<img class= "event-logo"><%= image_tag @event.logo %></img>

<div id="event-info-content event_name">
<center>
<h1><%= @event.name %></h1>
<p><%= @event.description  %></p>
<p><%= @event.tz %></p>
<p><%= @event.start %></p>
<p><%= @event.end %></p>

<!-- COMMENT SECTION BELOW -->
<!-- ********************* -->

<div id="comment-section">

<h2>Comments</h2>

<div id="scrollable-content">

<% @event.comments.each do |comment| %>
  <p>
    <%= link_to 'Edit', edit_event_comment_path(comment.event, comment) %>

    <%= link_to 'Delete', event_comment_path(comment.event, comment), method: :delete, data: {confirm: "Are you sure?"} %>
    <strong><%= comment.commenter %>: </strong>
    <%= comment.body %>
    </p>

<% end %>

</div>

<div id="add-comment-footer">
<h2>Add a comment:</h2>
<%= form_for([@event, @event.comments.build]) do |f| %>
  <p id="commenter">
    <%= f.label :user_name %><br>
    <%= f.text_field :commenter %>
  </p>
  <p id="comment-body">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

</div>

<%= link_to 'Back', root_path %>

</center>

</div>

</div>

</div>
