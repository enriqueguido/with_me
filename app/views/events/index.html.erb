<link href="https://fonts.googleapis.com/css?family=BioRhyme" rel="stylesheet">

<div id="nav-div">
  <span id="nav-text">
    Go With Me
  </span>
</div>

<div id="search" class="input-group">
<span class="input-group-btn">
<%= form_tag(events_path, :method => "get", id: "search-form", ) do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Events", :class => "form-control"%>
    <%= submit_tag "Search", :name => nil, :class => "btn-default", :id => "search-btn" %>
<% end %>
</span>
</div>

<div id="spacer">

</div>

<% @events.each do |event| %>
<div id="event">
  <%= link_to image_tag(event.logo), event_info_path(event), :id => "event_pic" %>
  <div id="event_name_wrapper">
    <div id="event_name"><%= event.name %></div>
  </div>
</div>
<% end %>

<% if @events.blank? %>
  <div id="error-back">
    <div id="error-content">
      <h4>There are no events containing the term <%= params[:search] %>.</h4>
    </div>
  </div>
<% end %>
